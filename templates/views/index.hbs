<!-- --main header-- -->
<div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row">
                <!-- left side div -->
                <div class="col-md-6 col-12 main_header_left align-items-center">
                    <p>Welcome to the weather app</p>
                    <h2>Get the Latest <span class="txt_color"> Weather </span> Info Of Your City</h2>
                    <a href="/weather"><button>Check now</button></a>
